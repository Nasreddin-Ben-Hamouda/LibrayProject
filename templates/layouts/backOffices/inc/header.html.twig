<div class="main-header">
    <div class="logo">
        <img src="{{ asset('images/frontOffice/logo-139x43.png') }}" style="width:70%;height:70%" alt="">
    </div>

    <div class="menu-toggle">
        <div></div>
        <div></div>
        <div></div>
    </div>

    <div class="d-flex align-items-center">
    </div>

    <div style="margin: auto"></div>

    <div class="header-part-right">
        <!-- Full screen toggle -->
        <i class="i-Full-Screen header-icon d-none d-sm-inline-block" data-fullscreen></i>
        <!-- Grid menu Dropdown -->

        <!-- User avatar dropdown -->
        <div class="dropdown">
            <div  class="user col align-self-end">
                <img src="{% if app.user.photo %} {{ asset('storage/images/avatar/') }}{{ app.user.photo}}  {% else%} {{ asset('images/backOffices/user.png') }} {% endif %}" id="userDropdown" alt="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <div class="dropdown-header">
                        <i class="i-Administrator mr-1"></i>
                        {% if is_granted('ROLE_ADMIN') %}
                            Administrateur
                            {% if space=="admin" %}
                                <a href="{{ path('showLibrarianDashboard') }}"><span class="badge badge-success" style="color: black"><i class="i-Eye"></i>Espace Bibliothécaire </span> </a>
                            {% else %}
                                <a href="{{ path('showAdminDashboard') }}"><span class="badge badge-success" style="color: black"><i class="i-Eye"></i>Espace Administartif </span> </a>
                            {% endif %}
                        {% else %}
                            Bibliothécaire
                        {% endif %}
                    </div>
                    <a class="dropdown-item" href="{% if is_granted('ROLE_ADMIN') %} {{ path('showAdminProfile') }} {% else %} {{ path('showLibrarianProfile') }} {% endif %} "><i class="i-Checked-User"></i>Profile</a>
                    <a class="dropdown-item" href="{{ path('logout') }}"><i class="i-Lock"></i>Déconnexion</a>
                </div>
            </div>
        </div>
    </div>

</div>
