    <!-- Button isotope-->
    <section class="section section-variant-2 bg-default novi-background bg-cover text-center">
        <div class="container container-wide">
            <div class="isotope-wrap row row-fix row-50">
                <!-- Isotope Filters-->
                <div class="col-xl-12">
                    <ul class="isotope-filters isotope-filters-horizontal">
                        <li class="block-top-level">
                            <p class="big">Choose your category:</p>
                            <!-- Isotope Filters-->
                            <button class="isotope-filters-toggle button button-xs button-primary" data-custom-toggle="#isotope-filters-list-1" data-custom-toggle-hide-on-blur="true">Filter<span class="caret"></span></button>
                            <ul class="isotope-filters-list isotope-filters-list-buttons" id="isotope-filters-list-1">
                                <li><a class="button-xs active" data-isotope-filter="*" data-isotope-group="movies" href="#">All Categories</a></li>
                                {% for category in categories %}
                                    <li><a class="button-xs" data-isotope-filter="{{ category }}" data-isotope-group="movies" href="#">{{ category }}</a></li>
                                {% endfor %}
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- Isotope Content-->
                <div class="col-xl-12">
                    <div class="isotope isotope-md row row-30" data-isotope-layout="fitRows" data-isotope-group="movies" data-lightgallery="group">
                        {% for book in books %}
                            <div class="col-md-6 col-lg-4 col-xl-3 col-xxl-3 isotope-item" data-filter="{{ book.category }}">
                                <div class="product" style="height:38em;">
                                    <div class="product-image"><a href="#"><img src="/storage/images/book/{{ book.medias|first.path }}" alt="" width="188" height="246"/></a></div>
                                    <div class="product-title">
                                        <h5><a href="#">{{ book.title }}</a></h5>
                                    </div>
                                    <div class="product-price">
                                        <h6>{{ book.subject }}</h6>
                                    </div>
                                    {% if app.user %}
                                        {% if book.loans is empty %}
                                            <div class="product-button"><a class="button button-primary button-nina" href="{{ path('loanBook', {'id': book.id}) }}">Loan</a></div>
                                        {% else %}
                                            {% for loan in book.loans %}
                                                <div class="product-button">Loaned by {% if app.user.id== loan.user.id%} you {% else %} {{ loan.user.name }} {% endif %}</div>
                                                {% if app.user.id== loan.user.id %}
                                                    <a class="button button-primary button-nina" href="{{ path('returnbook', {'id': loan.id}) }}">Return Book</a>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}

                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}


                    </div>
                </div>
            </div><a class="button button-primary button-nina" >view more books</a>
        </div>
    </section>

    <!-- Small Features-->
