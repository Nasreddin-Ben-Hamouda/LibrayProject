{% extends 'layouts/frontOffice/layout.html.twig' %}
{% block header %}
    {% include 'layouts/frontOffice/inc/header.html.twig' %}
{% endblock  %}

{% block content %}
    <!-- Breadcrumbs-->
    <section class="breadcrumbs-custom custom-bg-image context-dark" style="background-image: url({{ asset('images/frontOffice/bg-fullwidth.jpg') }});">
        <div class="container">
            <p class="breadcrumbs-custom-subtitle">Who I Am</p>
            <p class="heading-1 breadcrumbs-custom-title">About me</p>
            <ul class="breadcrumbs-custom-path">
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="#">About Us</a></li>
                <li class="active">About me</li>
            </ul>
        </div>
    </section>


    <!-- Ronald Chen-->
    <section class="section section-lg bg-default text-left">
        <div class="container container-bigger">
            <div class="row row-fix row-50 justify-content-xl-between">
                <div class="col-xl-4">
                    <div class="row row-fix row-70 align-items-md-center">
                        <div class="col-md-6 col-xl-12"><img src="{% if app.user.photo %}{{ asset('storage/images/avatar/') }}{{ app.user.photo }}{% else %}{{ asset('images/frontOffice/ronald-chen-1-420x420.jpg') }} {% endif %}" alt="" width="420" height="420"/>
                        </div>
                    </div>
                </div>
                <div class="col-xl-7">
                    <div class="row row-fix row-30 row-xl-120">
                        <div class="col-sm-12">
                            <div class="heading-decorated-diamonds">{% if is_granted('ROLE_ADMIN') %} Administrator {% elseif is_granted('ROLE_LIBRARIAN') %} Librarian {% else %} Student {% endif %}</div>
                            <br><br><br>
                            <h3>{{ app.user.name }}</h3>
                            <div class="divider divider-secondary"></div>
                            <div class="row text-center row-lg row-30 row-xxs-center">
                                <div class="cell-xxs-6 col-sm-4">

                                </div>
                                <div class="cell-xxs-6 col-sm-4">
                                    <div class="progress-bar-circle" data-value="{{ app.user.loans|length/100 }}" data-gradient="#fff586" data-empty-fill="rgb(242,243,249)" data-size="200" data-thickness="6"><span class="radial">5</span></div>
                                    <div class="heading-5">Percentage of loans</div>
                                </div>
                                <div class="cell-xxs-6 col-sm-4">

                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row row-70">
                                <div class="col-md-6">
                                    <h6>Loans ({{ app.user.loans|length }})</h6>
                                    <ul class="list list-xxs text-spacing-sm">
                                        {% for loan in app.user.loans %}
                                            <li>{{loan.takenAt|date}} â€” {{ loan.book.title }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h6>My information</h6>
                                    <ul class="list-xs">
                                        <li class="box-inline box-inline-gray"><span class="icon novi-icon icon-md-smaller icon-primary mdi mdi-account"></span>
                                            <div><a href="#">{{ app.user.email }}</a></div>
                                        </li>
                                        {% if app.user.studentNumber %}
                                        <li class="box-inline box-inline-gray"><span class="icon novi-icon icon-md-smaller icon-primary mdi mdi-numeric-0-box-multiple-outline"></span>
                                            <div><a href="#">{{ app.user.studentNumber }}</a></div>
                                        </li>
                                        {% endif %}
                                        <li class="box-inline box-inline-gray"><span class="icon novi-icon icon-md-smaller icon-primary mdi mdi-map-marker"></span>
                                            <div><a href="#">{{ app.user.address }}</a></div>
                                        </li>
                                        <li class="box-inline box-inline-gray"><span class="icon novi-icon icon-md-smaller icon-primary mdi mdi-phone"></span>
                                            <ul class="list-comma">
                                                <li><a href="#">{{ app.user.phone }}</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <ul class="inline-list-xs">
                                                <li><a class="icon novi-icon icon-sm-bigger icon-gray-1 mdi mdi-facebook" href="#"></a></li>
                                                <li><a class="icon novi-icon icon-sm-bigger icon-gray-1 mdi mdi-twitter" href="#"></a></li>
                                                <li><a class="icon novi-icon icon-sm-bigger icon-gray-1 mdi mdi-instagram" href="#"></a></li>
                                                <li><a class="icon novi-icon icon-sm-bigger icon-gray-1 mdi mdi-google" href="#"></a></li>
                                                <li><a class="icon novi-icon icon-sm-bigger icon-gray-1 mdi mdi-linkedin" href="#"></a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects-->

    <!-- CTA-->
    <section class="section section-md text-center text-md-left bg-gray-700 novi-background bg-cover">
        <div class="container container-wide">
            <div class="row row-fix row-50 justify-content-sm-center">
                <div class="col-xxl-8">
                    <div class="box-cta box-cta-inline">
                        <div class="box-cta-inner">
                            <h3 class="box-cta-title">Looking for a New Book to Read?</h3>
                            <p>At Booker, you can rent all kinds of books written by widely known authors.</p>
                        </div>
                        <div class="box-cta-inner"><a class="button button-primary button-nina" href="about-us.html">learn more</a></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}